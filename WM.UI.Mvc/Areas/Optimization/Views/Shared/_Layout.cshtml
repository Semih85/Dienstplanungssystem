@{
    Layout = null;
}

@* Transport Nöbet Layout *@
<!DOCTYPE html>
<html lang="tr">
<head>
    <!-- Required meta tags -->

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap, font-awasome, Site CSS -->

    @Styles.Render("~/bundle/style")
    @RenderSection("styles", false)

</head>
<body>

    <!-- Navbar -->

    <nav class="navbar navbar-expand-lg navbar-light bg-warning fixed-top mb-5" style="background-color: #e3f2fd;">
        <a class="navbar-brand" href="@Url.Action( "Index", "Home",new { area = "" })"><i class="fa fa-home fa-lg" aria-hidden="true"></i></a>
        <a class="navbar-brand" href="@Url.Action( "Index", "Transport",new { area = "Optimization" })"> Transport</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor03" aria-controls="navbarColor03" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        @*@Html.Action("MenuPartial", "Menu", new { area = "EczaneNobet" })*@
    </nav>

    <!-- Body -->

    <div class="container-fluid mt-4 pt-5">
        @if (IsSectionDefined("SolTaraf"))
        {
            <div class="row">
                <!-- Kategoriler -->
                <div class="col-md-2">
                    @RenderSection("SolTaraf", false)
                </div>
                <!-- Render Body -->
                <div class="col-md-10">
                    @RenderBody()
                </div>
            </div>
        }
        else
        {
            <div class="row">
                <!-- Render Body -->
                <div class="col-md-12">
                    @RenderBody()
                    @*<div class="container-fluid">
                        </div>*@
                </div>
            </div>
        }
    </div>

    <!-- Footer #bee5eb #f5f5f5-->
    @*<footer class="footer fixed-bottom bg-dark">
            <div class="container-fluid">
                <div class="navbar navbar-expand-lg">
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item"> <a class="nav-link" href="@Url.Action( "About", "Home",new { area = "" })"><span class="fa fa-info-circle"> Hakkımızda</span></a> </li>
                        <li class="nav-item"> <a class="nav-link" href="@Url.RouteUrl("Default", new { controller = "Home", action = "Contact" })"><span class="fa fa-envelope"> İletişim</span></a> </li>

                    </ul>
                    <a class="navbar text-right text-muted">&copy; @DateTime.Now.Year - Tüm hakları saklıdır.</a>
                </div>

            </div>
        </footer>*@


    @Scripts.Render("~/bundle/scripts")
    @RenderSection("scripts", false)
    <script type="text/javascript">
        $(document).ready(function () {
            $("body").tooltip({ selector: '[data-toggle=tooltip]' });
        });
    </script>
</body>
</html>