@model IEnumerable<WM.Northwind.Entities.Concrete.Transport.Fabrika>

@{
    ViewBag.Title = "Index";
}

@section SolTaraf{
    @Html.Action("TransportDataPartialView", "Transport", new { area = "Optimization" })
}

<h2>Fabrika</h2>

<hr />

<div class="row">
    <div class="col-md-4">

        <p>
            <a class="btn btn-outline-success" href="@Url.Action("Create", null, new { @class= "btn btn-success" })"><span class="fa fa-plus"></span> Ekle</a>

            @*@Html.ActionLink("Ekle", "Create", null, new { @class = "btn btn-success fa fa-plus" })*@
        </p>

        <table class="table table-hover table-bordered table-sm text-center">
            <thead class="bg-info">
                <tr>
                    <th class="w-25">
                        @Html.DisplayNameFor(model => model.Adi)
                    </th>
                    <th class="w-25">
                        @Html.DisplayNameFor(model => model.Kapasite)
                    </th>
                    <th class="w-25"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Adi)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Kapasite)
                        </td>
                        <td>
                            @Html.ActionLink("  ", "Edit", new { id = item.Id }, new { @class = "btn btn-outline-success btn-sm fa fa-edit fa-lg" }) |
                            @Html.ActionLink("  ", "Details", new { id = item.Id }, new { @class = "btn btn-outline-primary btn-sm fa fa-info-circle fa-lg" }) |
                            @Html.ActionLink("  ", "Delete", new { id = item.Id }, new { @class = "btn btn-outline-danger btn-sm fa fa-remove fa-lg" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>