@model WM.UI.Mvc.Areas.Optimization.Models.TransportMaliyetIndexModel

@{
    ViewBag.Title = "Index";
}

@section SolTaraf{
    @Html.Action("TransportDataPartialView", "Transport", new { area = "Optimization" })
}

<h2>Ulaştırma Maliyetleri</h2>

<hr />
<p>
    <a class="btn btn-outline-success" href="@Url.Action("Create", null, new { @class= "btn btn-success" })"><span class="fa fa-plus"></span> Yeni Kayıt</a>
</p>
<table class="table table-hover">
    <tr class="thead-light">
        <th>
            Fabrika Adı
        </th>
        <th>
            Depo Adı
        </th>
        <th>
            Ulaştırma Maliyeti
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.MaliyetDetail)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FabrikaAdi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DepoAdi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Deger)
            </td>
            <td>
                @Html.ActionLink("  ", "Edit", new { id = item.Id }, new { @class = "btn btn-outline-success btn-sm fa fa-edit fa-lg" }) |
                @Html.ActionLink("  ", "Details", new { id = item.Id }, new { @class = "btn btn-outline-primary btn-sm fa fa-info-circle fa-lg" }) |
                @Html.ActionLink("  ", "Delete", new { id = item.Id }, new { @class = "btn btn-outline-danger btn-sm fa fa-remove fa-lg" })
            </td>
        </tr>
    }

</table>
