@model IEnumerable<UserEczaneDetay>

@{
    ViewBag.Title = "Index";
}

<h4>Kullanıcı Eczane</h4>

<p>
    @Html.ActionLink("Ekle", "Create")
</p>
<table class="table table-hover table-sm">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.EczaneAdi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.KullaniciAdi)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.EczaneAdi)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.KullaniciAdi)
        </td>
        <td>
            @Html.ActionLink(" ", "Edit", new { id = item.Id }, new { @class = "btn btn-outline-success btn-sm fa fa-edit fa-lg" })
            @Html.ActionLink(" ", "Details", new { id = item.Id }, new { @class = "btn btn-outline-primary btn-sm fa fa-info-circle fa-lg" })
            @Html.ActionLink(" ", "Delete", new { id = item.Id }, new { @class = "btn btn-outline-danger btn-sm fa fa-remove fa-lg" })
        </td>
    </tr>
}

</table>
