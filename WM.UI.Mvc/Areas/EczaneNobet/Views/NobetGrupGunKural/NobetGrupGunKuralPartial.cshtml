
@model IEnumerable<NobetGrupGunKuralDetay>

<a data-toggle="collapse" href="#collapseExample" aria-expanded="false" title="Açıklama!!!" aria-controls="collapseExample" class="card-link">
    <i class="fa fa-info-circle" aria-hidden="true"> Açıklama</i>
</a>

<div class="collapse" id="collapseExample">
    <div class="alert alert-info alert-dismissible fade show" role="alert">
        <span class="font-weight-bold"><i class="fa fa-check-circle-o" aria-hidden="true"></i> Aktif</span> günler <strong>eşit dağılım için </strong>takip edilmektedir.
        <strong>Aktif / pasif</strong> olarak değiştirilmek istenen gün için <strong>Nöbet Grubu</strong> ve <strong>Gün</strong> seçeneklerini kullanarak <strong class="text-primary">Güncelle</strong> butonu ile güncelleyiniz.
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
</div>

<table class="table table-hover table-sm" id="tblNobetGrupGunKurallar">
    <thead class="thead-light">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NobetGrupAdi)
            </th>
            <th>
                @Html.DisplayName("Gün")
            </th>
            <th>
                Durum
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            if (item.BitisTarihi != null)
            {
                <tr class="clickable-row alert-danger">
                    <td>
                        @Html.DisplayFor(modelItem => item.NobetGrupAdi)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NobetGunKuralAdi)
                    </td>
                    <td>
                        <span class="font-weight-bold text-danger">Pasif</span>
                    </td>
                </tr>
            }
            else
            {
                <tr class="clickable-row alert-success">
                    <td>
                        @Html.DisplayFor(modelItem => item.NobetGrupAdi)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NobetGunKuralAdi)
                    </td>
                    <td>
                        <span class="font-weight-bold text-success"><i class="fa fa-check" aria-hidden="true"></i> Aktif</span>
                    </td>
                </tr>
            }

        }
    </tbody>
</table>

