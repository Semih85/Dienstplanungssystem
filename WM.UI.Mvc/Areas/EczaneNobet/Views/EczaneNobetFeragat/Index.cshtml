@model IEnumerable<EczaneNobetFeragatDetay>

@{
    ViewBag.Title = "Nöbet Feragat | Nöbet Sistemi";
}

<h4>
    Eczane Nöbet Feragat
    <a class="btn btn-outline-success btn-sm ml-5 mr-4" href="@Url.Action("Create", null, new { area= "EczaneNobet" })"><span class="fa fa-plus"></span> Yeni Kayıt</a>

    <a data-toggle="modal" data-target="#aciklamaModal" href="#" class="btn btn-outline-info btn-sm" title="Açıklama" role="button">
        <i class="fa fa-info-circle"></i> Açıklama
    </a>
</h4>

<hr />

<div class="modal" tabindex="-1" id="aciklamaModal" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header alert-info">
                <h5 class="modal-title"><i class="fa fa-info-circle"></i> Nöbet Feragat</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <h6 class="font-weight-bold"><span class="badge badge-pill badge-secondary">1</span> Normal feragat</h6>
                <p>
                    Feragat edilen bir nöbet tutmuş olarak sayılmaya devam eder.
                    <br />
                    Bu nöbet değiştirilirse artık feragat edenin nöbeti sayılmaz.
                </p>
                <h6 class="font-weight-bold"><span class="badge badge-pill badge-secondary">2</span> Her iki nöbetçinin de nöbeti sayıl<span class="text-danger">ma</span>sın</h6>
                <p>
                    Feragat tipi bu şekilde seçilirse her iki nöbetçi için de bu nöbet sayılmaz.
                </p>
                <h6 class="font-weight-bold"><span class="badge badge-pill badge-secondary">3</span> Her iki nöbetçinin de nöbeti sayılsın</h6>
                <p>Feragat eden ile yeni nöbetçinin nöbetlerinin sayılması için listeden gerçek nöbetçi ekleyiniz.</p>
                <h6 class="font-weight-bold"><span class="badge badge-pill badge-secondary">4</span> Sadece feragat eden nöbetçinin nöbeti sayılsın</h6>
                <p>Bu nöbet değişilmiş olsa bile sadece feragat eden nöbetçinin nöbeti sayıllır.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary btn-sm" data-dismiss="modal">Kapat</button>
            </div>
        </div>
    </div>
</div>


<table class="table table-hover table-sm">
    <thead class="thead-light">
        <tr>
            @*<th>
            @Html.DisplayNameFor(model => model.EczaneNobetSonucId)
        </th>*@
            <th>
                @Html.DisplayName("Nöbetçi")
            </th>
            <th style="width:13%">
                @Html.DisplayNameFor(model => model.NobetGrupAdi)
            </th>
            <th>
                @Html.DisplayName("Görev Tipi")
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tarih)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NobetFeragatTipAdi)
            </th>
            <th>
                @Html.DisplayName("Feragat Eden")
            </th>
            <th style="width:30%">
                @Html.DisplayNameFor(model => model.Aciklama)
            </th>
            <th style="width:10%"></th>
        </tr>
    </thead>
    @foreach (var item in Model)
    {
    <tr>
        @*<td>
            @Html.DisplayFor(modelItem => item.EczaneNobetSonucId)
        </td>*@
        <td>
            @Html.DisplayFor(modelItem => item.EczaneAdi)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NobetGrupAdi)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NobetGorevTipAdi)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Tarih)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NobetFeragatTipAdi)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EczaneAdiFeragatEden)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Aciklama)
        </td>
        <td>
            @{
                var target = $"#islem{@item.EczaneNobetSonucId}";
            }
            <button class="btn btn-sm btn-secondary d-sm-block d-md-none" type="button" data-toggle="collapse" data-target="@target" aria-controls="navbarColor03" aria-expanded="false" aria-label="Toggle navigation">
                <span class="fa fa-cog"></span>
            </button>
            <div class="collapse d-md-block" id="@target.Remove(0,1)">

                <a class="btn btn-outline-success py-0 btn-sm" title="Gerçek Nöbetçi Ekle" href="@Url.Action("CreateGercekNobetci", "EczaneNobetSonuc", new { takvimId = item.TakvimId, area= "EczaneNobet" })"><span class="fa fa-plus"></span></a>
                <a class="btn btn-outline-warning py-0 btn-sm" title="Nöbetçiyi Değiştir" href="@Url.Action("Edit", "EczaneNobetSonuc", new { id = item.EczaneNobetSonucId, nobetGrupId = item.NobetGrupId, takvimId = item.TakvimId, area= "EczaneNobet" })"><span class="fa fa-hand-o-right"></span></a>

                @*@Html.ActionLink(" ", "Edit", "EczaneNobetSonuc", new { id = item.EczaneNobetSonucId, nobetGrupId = item.NobetGrupId, takvimId = item.TakvimId }, new { @class = "btn btn-outline-warning btn-sm fa fa-hand-o-right" })*@
                <a class="btn btn-outline-success py-0 btn-sm" title="Düzenle" href="@Url.Action("Edit", null, new { id = item.EczaneNobetSonucId, area= "EczaneNobet" })"><span class="fa fa-edit"></span></a>
                <a class="btn btn-outline-primary py-0 btn-sm" title="Detaylar" href="@Url.Action("Details", null, new { id = item.EczaneNobetSonucId, area= "EczaneNobet" })"><span class="fa fa-info-circle"></span></a>
                <a class="btn btn-outline-danger py-0 btn-sm" title="Sil" href="@Url.Action("Delete", null, new { id = item.EczaneNobetSonucId, area= "EczaneNobet" })"><span class="fa fa-trash"></span></a>

                @*@Html.ActionLink(" ", "Edit", new { id = item.EczaneNobetSonucId }, new { @class = "btn btn-outline-success btn-sm fa fa-edit", @style = "height:23px;" })
                @Html.ActionLink(" ", "Details", new { id = item.EczaneNobetSonucId }, new { @class = "btn btn-outline-primary btn-sm fa fa-info-circle", @style = "height:23px;" })
                @Html.ActionLink(" ", "Delete", new { id = item.EczaneNobetSonucId }, new { @class = "btn btn-outline-danger btn-sm fa fa-remove ", @style = "height:23px;" })*@
            </div>
        </td>
    </tr>
    }

</table>
