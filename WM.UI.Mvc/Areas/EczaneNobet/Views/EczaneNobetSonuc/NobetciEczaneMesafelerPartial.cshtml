@model IEnumerable<NobetciEczaneMesafe>

@if (Model.Count() > 0)
{
    <table class="table table-hover table-bordered table-sm">
        <thead class="thead-light">
            <tr>
                <th>
                    @Html.DisplayName("Eczane")
                </th>
                <th>
                    @Html.DisplayName("Mazereti")
                </th>
                <th>
                    @Html.DisplayName("Mesafe (m)")
                </th>
                <th>
                    @Html.DisplayName("Nöbet Tarihi")
                </th>
                @*<th></th>
                    <th></th>*@
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.EczaneAdiFrom)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EczaneAdiTo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Mesafe)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NobetTarihi)
                    </td>
        
                    @*<td>
                            @Html.ActionLink("Nöbet Değiştir", "UpdateSonuclarInsertDegisim", new { eczaneNobetSonucId = item.Id })
                        </td>
                        <td>
                            @Html.ActionLink("Alternatif Nöbetçi Eczaneler", "AlternatifNobetciOnerileri", new { eczaneNobetSonucId = item.Id })
                        </td>*@
                </tr>

            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info" role="alert">
        Nöbetçi eczane bulunmamaktadır.
    </div>
}

