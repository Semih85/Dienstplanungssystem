@model WM.UI.Mvc.Models.LoginViewModel

@{
    //Layout = "~/Views/Shared/_Layout.cshtml";
    //Layout = "~/Areas/EczaneNobet/Views/Shared/_Layout.cshtml";
    //var bilgi = ViewBag.Kullanici;

    string formClass = "form-control";

    ViewBag.Title = "Giriş | Nöbet Sistemi";

    if (ViewBag.FormClass != null)
    {
        formClass = ViewBag.FormClass;
    }
}


<div class="row justify-content-center mx-2">
    <div class="card bg-light" style="width: 40rem; margin-top: 2rem;">
        <div class="card-body">
            <h5 class="card-title text-primary font-weight-bold">@MultiLanguage.HomeTexts.Giris</h5>
            <h6 class="card-subtitle mb-4 text-muted">@MultiLanguage.HomeTexts.KayitIcinIletisimeGecin <a href="mailto:nobetyaz@gmail.com" alt="nobetyaz@gmail.com" title="nobetyaz@gmail.com"><span class="fa fa-envelope fa-lg"></span></a></h6>
            @*<p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>*@
            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @*@ViewData.ModelState*@
                    E-Posta ya da şifre hatalı !!!
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            }

            @if (TempData["KullaniciDurumu"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="fa fa-check" aria-hidden="true"></i> @Html.Raw(TempData["KullaniciDurumu"])
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            }

            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal" }))
            {
                <div class="form-group">
                    @*<label for="exampleInputEmail1">E-Posta adresi</label>*@
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="basic-addon1"><i class="fa fa-at"></i></span>
                        </div>
                        @Html.EditorFor(model => model.LoginItem.Email, new { htmlAttributes = new { @class = "form-control", placeholder = @MultiLanguage.HomeTexts.Eposta } })
                    </div>
                    @*<small id="emailHelp" class="form-text text-muted">Eposta adresinizi kimseyle paylaşmıyoruz.</small>*@
                    @Html.ValidationMessageFor(model => model.LoginItem.Email, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    @*<label for="exampleInputEmail1">Şifre</label>*@
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="basic-addon1"><i class="fa fa-key"></i></span>
                        </div>
                        @Html.EditorFor(model => model.LoginItem.Password, new { htmlAttributes = new { @class = formClass, placeholder = @MultiLanguage.HomeTexts.Parola } })
                    </div>
                    @Html.ValidationMessageFor(model => model.LoginItem.Password, "", new { @class = "text-danger" })
                </div>

                <div class="col-auto my-1">
                    <div class="custom-control custom-checkbox mr-sm-2">
                        @Html.CheckBoxFor(m => m.LoginItem.RememberMe, new { @class = "custom-control-input", id = "customControlAutosizing" })
                        <label class="custom-control-label" for="customControlAutosizing">@MultiLanguage.HomeTexts.BeniHatırla</label>
                    </div>
                </div>

                <button type="submit" class="btn btn-success pull-right"><i class="fa fa-sign-in"></i> @MultiLanguage.HomeTexts.KullaniciGirisi</button>
            }
            @*<a href="#" class="card-link">Card link</a>*@
            @*<a href="#" class="card-link">Another link</a>*@
        </div>
    </div>
</div>


@section Scripts{
    @Scripts.Render("~/bundle/validation/scripts")

    <script>
        //alert($("#LoginItem_Email").length)
        //if ($("#LoginItem_Email").val()==0) {
        $("#LoginItem_Email").focus();
        //}
        $(function () {
            //ready
            $('#navItemReferans').hide();
        })
    </script>
}

