</head>
<body>

    <!-- Navbar -->

    <nav class="navbar navbar-expand-lg navbar-dark bg-primary fixed-top mb-5" style="background-color: #e3f2fd;" id="navbarAnaSayfa">
        <a class="navbar-brand" href="/"> Nöbet Yaz</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor03" aria-controls="navbarColor03" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarColor03">
            <ul class="navbar-nav mr-auto">

                @*<li class="nav-item active">
                        <a class="nav-link" href="/"><i class="fa fa-home fa-lg" aria-hidden="true"></i> <span class="sr-only">(current)</span></a>
                    </li>*@

                @* İletişim *@
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("NobetYazDetay")">Detaylar</a>
                </li>
                <li class="nav-item" id="navItemReferans">
                    <a class="nav-link" href="#referanlarimiz">Referanslarmız</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="http://eniyiplan.com/" target="_blank" role="button">Faaliyetlerimiz</a>
                </li>
            </ul>
            <ul class="navbar-nav float-md-right">
                <li class="nav-item">
                    <a class="nav-link" href="~/Content/images/Brosur.pdf" target="_blank"><span class="fa fa-file-o"></span> Broşür</a>
                </li>
                <li class="nav-item"> <a class="nav-link" href="@Url.RouteUrl("Default", new { controller = "Home", action = "Contact" })"><span class="fa fa-envelope-open-o"></span> İletişim</a> </li>
                @Html.Partial("_LoginPartial")
            </ul>

            @*<form class="form-inline">
                    <input class="form-control mr-sm-2" type="text" placeholder="Ara" aria-label="Search">
                    <button class="btn btn-outline-success my-2 my-sm-0" type="submit"> <span class="fa fa-search"></span> </button>
                </form>*@

        </div>
    </nav>

    <!-- Body -->

    @RenderSection("jumbotronMaster", false)

    @if (!IsSectionDefined("jumbotronMaster"))
    {
        containerPadding = "mt-5";
    }

    <div class="container-fluid pt-4 @containerPadding">

        @if (IsSectionDefined("SolTaraf"))
        {
            <div class="row">

                <!-- Kategoriler -->

                <div class="col-md-2">

                    @RenderSection("SolTaraf", false)

                </div>

                <!-- Render Body -->

                <div class="col-md-10">
                    @RenderBody()
                </div>
            </div>
        }
        else
        {
            <div class="row">

                <!-- Render Body -->

                <div class="col-md-12">
                    @RenderBody()
                </div>
            </div>
        }
    </div>
    <!-- Footer #bee5eb #f5f5f5-->
