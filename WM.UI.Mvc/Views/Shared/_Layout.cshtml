@{
    Layout = null;
    var containerPadding = "";
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <!-- Required meta tags -->
    @*<link rel="icon" href="~/Content/images/logo-nobetyaz.png" sizes="16x16">*@
    <link rel="icon" type="image/png" href="~/Content/images/favicon-32x32-transperent.png" sizes="32x32" />
