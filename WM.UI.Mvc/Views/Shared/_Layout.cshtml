    <meta name="description" content="Siz uğraşmayın, Nöbet Yaz'sın.">
    <meta name="author" content="">
    <meta name="keywords" content="Nöbetçi Eczane, Hemşire Nöbeti, Çizelgeleme, Akademik çözümler">
    <title>@ViewBag.Title</title>
    <!-- Bootstrap, font-awasome, Site CSS -->

    @Styles.Render("~/bundle/style")
