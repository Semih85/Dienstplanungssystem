    .circle {
        background: #007bff;
        width: 100px;
        line-height: 100px;
        display: inline-block;
        color: #fff;
        border-radius: 100%;
        font-size: xx-large
    }

    .seviye {
        color: #007bff;
        font-size: x-large;
    }

    .ref {
        font-size: xx-large;
        font-weight: 500;
    }
</style>

<div class="container">
    <div class="row text-center mb-2">
        <div class="col-md-12 mb-3">
            <div class="ref" id="hizmetlerimiz">Hizmetlerimiz</div>
        </div>

        <div class="col-md-6 mb-3">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Nöbetçi Eczane Belirleme</h4>
                    @if (Request.IsAuthenticated)
                    {
                        <a class="nav-link" href="@Url.Action("Index", "NobetYaz",new { area = "EczaneNobet" })">
                            <img class="img-fluid" src="~/Content/images/nobetciEczaneResim2.jpg" alt="Nöbetçi Eczane Belirleme" title="Sisteme giriş yapmak için tıklayınız." style="height:50%; width:50%" />
                        </a>
                    }
                    else
                    {
                        <a class="nav-link" href="@Url.Action("Login", "Account",new { area = "" })">
                            <img class="img-fluid" src="~/Content/images/nobetciEczaneResim2.jpg" alt="Nöbetçi Eczane Belirleme" title="Sisteme giriş yapmak için tıklayınız." style="height:50%; width:50%" />
                        </a>
                    }
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Hemşire Nöbet Çizelgeleme</h4>
                    <img class="img-fluid" src="~/Content/images/hemsireCizelgeleme2.jpg" title="Hemşire Nöbet Çizelgeleme" style="height:66%; width:66%" />
                    @*style="height:220px;"*@
                </div>
            </div>
        </div>
    </div>

    @*sayılar:*@

    <div class="row text-center mb-2">
        <div class="col-md-3 mb-3">
            <div style="display:none" id="odaSayisiSabit">3</div>
            <div class="counter circle" id="odaSayisi">0</div>
            <div class="seviye">Eczacı Odası</div>
        </div>
        <div class="col-md-3 mb-3">
            <div style="display:none" id="ustGrupSayisiSabit">26</div>
            <div class="counter circle" id="ustGrupSayisi">0</div>
            <div class="seviye">Nöbet Bölgesi</div>
        </div>
        <div class="col-md-3 mb-3">
            <div style="display:none" id="grupSayisiSabit">869</div>
            <div class="counter circle" id="grupSayisi">0</div>
            <div class="seviye">Eczane</div>
        </div>
        <div class="col-md-3 mb-3">
            <div style="display:none" id="eczaneSayisiSabit">5000</div>
            <div class="counter circle" id="eczaneSayisi">0</div>
            <div class="seviye">Yazılan Nöbet</div>
        </div>
    </div>


    <div class="row text-center">
        <div class="col-md-12 mb-3">
            <div class="ref" id="nobetSistemi">Nöbet Sistemi</div>
        </div>

        <div class="col-md-4">
            <div class="card text-white bg-primary mb-3">
                @*<img class="card-img-top" src="..." alt="Card image cap">*@
                <div class="card-body">
                    <h4 class="card-title">İstek</h4>
                    <p class="card-text">Eczanelerin geçerli isteklerinin olduğu günlere nöbet yazılır. Örneğin Pazar günü için özel bir sıra takip edilebilir.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card bg-light mb-3">
                <div class="card-body">
                    <h4 class="card-title">Eş Durumu</h4>
                    <p class="card-text">Farklı gruplardaki eşli eczanelere belirtilecek gün aralığında aynı anda nöbet yazılmaz.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-white bg-success mb-3">
                <div class="card-body">
                    <h4 class="card-title">Günlerin Dağılımı</h4>
                    @*<p class="card-text">Pazartesi, Salı, Çarşamba, Perşembe, Cuma, Cumartesi, Pazar ve dini/milli bayram günlerinin adaletli dağılımı sağlanır.</p>*@
                    @*<p class="card-text">Pazartesi, Salı, Çarşamba, Perşembe, Cuma, Cumartesi, Pazar ve dini/milli bayram günlerinde ihtiyaç duyulan nöbetçi sayısına göre nöbetler yazılır. Nöbet gruplarına özel belirtilecek günler için eczanelere adaletli nöbet dağılımı sağlanır.</p>*@
                    @*göre nöbetler yazılır. Nöbet gruplarına özel belirtilecek günler için eczanelere*@
                    <p class="card-text">Haftanın herbir günü ve dini/milli bayram günlerinde ihtiyaç duyulan nöbetçi sayısına adaletli nöbet dağılımı sağlanır.</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row text-center mb-3">
        <div class="col-md-4">
            <div class="card text-white bg-danger mb-3">
                <div class="card-body">
                    <h4 class="card-title">Mazeret</h4>
                    <p class="card-text">Eczanelerin geçerli mazeretlerinin olduğu günlere nöbet yazılmaz.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-white bg-secondary mb-3">
                <div class="card-body">
                    <h4 class="card-title">Peşpeşe Nöbet</h4>
                    <p class="card-text">Her eczanenin ay içinde peşpeşe günlerde nöbet tutması engellenir.</p>
                    @* bir nöbet ya da eczane grubuna özel belirtilen değerlere göre  *@
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-white bg-info  mb-3">
                <div class="card-body">
                    <h4 class="card-title">Birlikte Nöbet</h4>
                    @*<p class="card-text">Farklı gruplardaki aynı gün nöbet tutan eczanelerin uzun vadede sürekli birlikte nöbetçi olması engellenir.</p>*@
                    <p class="card-text">Farklı gruplardaki eczanelerin sürekli aynı gün nöbet tutması engellenir.</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row text-center my-3" id="referanlarimiz">
        <div class="col-md-12">
            <div class="ref">Referanslarımız</div>
        </div>

        <div class="col-md-4" style="margin-top:1%">
            <a class="nav-link" target="_blank" href="https://www.antalyaeo.org.tr/tr">
