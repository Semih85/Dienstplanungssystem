    <script>
        $(document).ready(function () {
            setTimeout(
                sayilariArttir,
                200 /*200 milisaniye sonra sayilariArttir fonksiyonunu çağır */
            );
        });
        function sayilariArttir() {
            odaSayisiSaydir();
            ustGrupSayisiSaydir();
            grupSayisiSaydir();
            eczaneSayisiSaydir();
        }
        function odaSayisiSaydir() {
            var odaSayim = document.getElementById("odaSayisi").innerText;
            var intOdaSayim = parseInt(odaSayim);
            intOdaSayim = intOdaSayim + 1;
            document.getElementById("odaSayisi").innerText = intOdaSayim;
            var odaSayisiSabit = document.getElementById("odaSayisiSabit").innerText;
            var intOdaSayisiSabit = parseInt(odaSayisiSabit);
            if (intOdaSayim < intOdaSayisiSabit) {
                setTimeout(
                    odaSayisiSaydir,
                    2000
                );
            }
        }
        function ustGrupSayisiSaydir() {
            var ustGrupSayim = document.getElementById("ustGrupSayisi").innerText;
            var intustGrupSayim = parseInt(ustGrupSayim);
            intustGrupSayim = intustGrupSayim + 1;
            document.getElementById("ustGrupSayisi").innerText = intustGrupSayim;
            var ustGrupSayisiSabit = document.getElementById("ustGrupSayisiSabit").innerText;
            var intustGrupSayisiSabit = parseInt(ustGrupSayisiSabit);
            if (intustGrupSayim < intustGrupSayisiSabit) {
                setTimeout(
                    ustGrupSayisiSaydir,
                    200//1000
                );
            }
        }
        function grupSayisiSaydir() {
            var grupSayim = document.getElementById("grupSayisi").innerText;
            var intgrupSayim = parseInt(grupSayim);
            intgrupSayim += 10;
            document.getElementById("grupSayisi").innerText = intgrupSayim;
            var grupSayisiSabit = document.getElementById("grupSayisiSabit").innerText;
            var intgrupSayisiSabit = parseInt(grupSayisiSabit);
            if (intgrupSayim < intgrupSayisiSabit) {
                setTimeout(
                    grupSayisiSaydir,
                    50//100
                );
            }

        }

        function eczaneSayisiSaydir() {
            var eczaneSayim = document.getElementById("eczaneSayisi").innerText;
            var inteczaneSayim = parseInt(eczaneSayim);
            inteczaneSayim += 25;
            //if (inteczaneSayim < 100)
            //    inteczaneSayim += 1;
            //if (inteczaneSayim < 300)
            //    inteczaneSayim += 20;
            ////if (inteczaneSayim < 1000)
            ////    inteczaneSayim = inteczaneSayim + 20;
            //else
            //    inteczaneSayim += 30;

            document.getElementById("eczaneSayisi").innerText = inteczaneSayim;
            var eczaneSayisiSabit = document.getElementById("eczaneSayisiSabit").innerText;
            var inteczaneSayisiSabit = parseInt(eczaneSayisiSabit);
            if (inteczaneSayim < inteczaneSayisiSabit) {
                setTimeout(
                    eczaneSayisiSaydir,
                    20
                );
            }
            else {
                document.getElementById("eczaneSayisi").innerText = inteczaneSayim + "+";
            }

        }
    </script>

