
@{
    ViewBag.Title = "Index";



    List<KeyValuePair<int, string>> labels = new List<KeyValuePair<int, string>>();

    labels.Add(new KeyValuePair<int, string>(1, "Tarih"));
    labels.Add(new KeyValuePair<int, string>(2, "Başlama Saati"));
    labels.Add(new KeyValuePair<int, string>(3, "Sınav Yeri Grubu"));
    labels.Add(new KeyValuePair<int, string>(4, "Sınav Yeri"));
    labels.Add(new KeyValuePair<int, string>(5, "Sütun"));
    labels.Add(new KeyValuePair<int, string>(6, "Ders"));
    labels.Add(new KeyValuePair<int, string>(7, "Öğrenci"));

}

<h2 class="text-center">Sınav Baskı Programı</h2>

<hr />
@using (Html.BeginForm())
{


    <div class="row">

        <div class="col-md-7">
            <div class="container">
                @foreach (var label in labels.Where(t => t.Key < 5))
                {
                    <div class="form-group row my-4">
                        <label for="exampleFormControlSelect1" class="col-3 col-form-label"><strong>@label.Value</strong></label>
                        <div class="col-4">
                            <select class="form-control" id="exampleFormControlSelect1">
                                <option>1</option>
                                <option>2</option>
                                <option>3</option>
                                <option>4</option>
                                <option>5</option>
                            </select>
                        </div>
                    </div>
                }
                @foreach (var label in labels.Where(t => t.Key >= 5))
                {
                    <div class="form-group row my-4">
                        <label for="exampleFormControlSelect1" class="col-3 col-form-label"><strong>@label.Value</strong></label>
                        <div class="col-7">
                            <select class="form-control" id="exampleFormControlSelect1">
                                <option>1</option>
                                <option>2</option>
                                <option>3</option>
                                <option>4</option>
                                <option>5</option>
                            </select>
                        </div>
                    </div>
                }

            </div>

        </div>

        <div class="col-md-5">

            <div class="row">
                <div class="col-md-5 text-center">
                    <label class="custom-control custom-checkbox">
                        <input type="checkbox" class="custom-checkbox">
                        <span class="custom-control-indicator"></span>
                        <span class="custom-control-description">Tümünü Seç</span>
                    </label>
                </div>
            </div>

            <div class="row mt-3">
                <div class="col-md-3">
                    <label class="custom-control custom-checkbox">
                        <input type="checkbox" class="custom-control">
                        <span class="custom-control-indicator"></span>
                        <span class="custom-control-description">Sütun Ayırma</span>
                    </label>
                </div>
                <div class="col-md-3">
                    <label class="custom-control custom-checkbox">
                        <input type="checkbox" class="custom-control">
                        <span class="custom-control-indicator"></span>
                        <span class="custom-control-description">Buklet</span>
                    </label>
                </div>
            </div>

            <div class="row mt-3">
                <div class="col-md-3">
                    <label class="custom-control custom-checkbox">
                        <input type="checkbox" class="custom-control">
                        <span class="custom-control-indicator"></span>
                        <span class="custom-control-description">Bilgi Formu</span>
                    </label>
                </div>
                <div class="col-md-3">
                    <label class="custom-control custom-checkbox">
                        <input type="checkbox" class="custom-control">
                        <span class="custom-control-indicator"></span>
                        <span class="custom-control-description">Resim</span>
                    </label>
                </div>
            </div>

            <div class="row mt-3">
                <div class="col-md-3">
                    <label class="custom-control custom-checkbox">
                        <input type="checkbox" class="custom-control">
                        <span class="custom-control-indicator"></span>
                        <span class="custom-control-description">Optik</span>
                    </label>
                </div>
                <div class="col-md-3">
                    <label class="custom-control custom-checkbox">
                        <input type="checkbox" class="custom-control">
                        <span class="custom-control-indicator"></span>
                        <span class="custom-control-description">Filigran</span>
                    </label>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col">
            <div class="form-group row">
                <div class="col-sm-10">
                    <button type="submit" class="btn btn-primary">Yazdır</button>
                </div>
            </div>
        </div>

    </div>
}

